<section class="py-5 text-center container-fluid" style="background-image: url(<%= image_path("film_projector.jpg")%>)">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light text-white py-5">Watch List</h1>
      <p>
        <%= link_to 'Add a new list', new_list_path, :class => "btn btn-primary"  %>
      </p>
    </div>
  </div>
</section>




<div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @lists.each do |list| %>
        <div class="col">
          <div class="card shadow-sm">
              <div class="position-relative">
                <img src= <%=list.background %> class="bd-placeholder-img card-img-top" width="100%;" height="225;">
                <div class="position-absolute top-50 start-50 translate-middle text-white "><%= list.name %></div>
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to 'View', list, :class => "btn btn-sm btn-outline-secondary"  %>
                  </div>
                </div>
              </div>
          </div>
        </div>
      <% end %>

      </div>
    </div>
  </div>
